<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hp.tugas5.Sub3Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_judulhalamanutama"
        android:text="Selamat Datang Halaman Utama"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_isihalamanutama"
        android:text="Ini merupakan halaman utama dari aplikasi latihan 5."
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"/>
</LinearLayout>
