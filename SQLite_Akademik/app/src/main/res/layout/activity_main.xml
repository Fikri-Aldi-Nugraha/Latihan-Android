<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.github.clans.fab.FloatingActionMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="260dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/FABmenu"
        app:menu_colorPressed="#424242"
        app:menu_colorNormal="#283593"
        app:menu_labels_colorNormal="#29B6F6"
        app:menu_labels_colorPressed="#FF00786D">


        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Course"
            app:fab_label="Course"
            app:fab_size="mini"
            android:src="@drawable/ic_layers"
            app:fab_colorNormal="#283593"
            app:fab_colorPressed="#424242"
            fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
            fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"/>

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Major"
            app:fab_label="Major"
            app:fab_size="mini"
            android:src="@drawable/ic_work"
            app:fab_colorNormal="#283593"
            app:fab_colorPressed="#424242"
            fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
            fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"/>

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Student"
            app:fab_label="Student"
            app:fab_size="mini"
            android:src="@drawable/ic_person_pin"
            app:fab_colorNormal="#283593"
            app:fab_colorPressed="#424242"
            fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
            fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"/>

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/StuCour"
            app:fab_label="Student Course"
            app:fab_size="mini"
            android:src="@drawable/ic_event_available"
            app:fab_colorNormal="#283593"
            app:fab_colorPressed="#424242"
            fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
            fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"/>

    </com.github.clans.fab.FloatingActionMenu>

    <ImageView
        android:layout_width="256dp"
        android:layout_height="322dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_school" />

</RelativeLayout>