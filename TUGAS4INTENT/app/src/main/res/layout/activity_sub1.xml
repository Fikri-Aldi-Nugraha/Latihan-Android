<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hp.tugas4intent.Sub1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INTENT"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_margin="8dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/textjudulsubactivity1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Intent adalah sebuah objek yang menyediakan waktu proses yang terpisah, misalnya dua activity"
            android:textSize="20sp"
            android:textAlignment="center"
            android:id="@+id/txtisisubactivity1"/>
    </LinearLayout>
</RelativeLayout>
